{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jest"
    ],
    "paths": {
      "@/*": ["src/*"],
      "coms/*":["src/components/*"],
      "assets/*":["src/assets/*"],
      "pages/*":["src/pages/*"],
      "styles/*":["src/styles/*"],
      "utils/*":["src/utils/*"],
      "base/*":["src/baseComponents/*"],
      "hooks/*":["src/hooks/*"],
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "vue.config.ts"
  ],
  "exclude": [
    "node_modules",
    "bin",
    "src/lib",
    "src/utils"
  ]
}
